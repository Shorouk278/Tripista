<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoActionBarForDialog" parent="Theme.AppCompat.Dialog">
        <item name="actionBarTheme">@style/Theme.AppCompat.NoActionBar</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="card_style" parent="CardView.Light">
        <item name="android:elevation" tools:targetApi="lollipop">32dp</item>
        <item name="cardBackgroundColor">@color/upcoming_card_bg</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="useCompatPadding">true</item>
        <item name="contentPadding">8dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>
</resources>
